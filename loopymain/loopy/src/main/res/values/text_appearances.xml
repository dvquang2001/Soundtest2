<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="Text.Standard">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Text.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Text.HeaderSmall">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Text.HeaderLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.HeaderLarge.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.SubHeaderLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Text.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Standard.Bold">
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.TileName">
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.TileInfo">
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">viewStart</item>

    </style>

    <style name="Text.TileStatus">
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
